<Window x:Class="KinectTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="800" Width="1200" WindowState="Maximized" Loaded="Window_Loaded">
    <Grid>
        <Canvas Name="canvas" Background="Black">
            <Ellipse Name="pointer" Canvas.Left="185" Canvas.Top="151" Height="30" Stroke="Red" Width="30" Fill="#AAFF0000"/>
            <TextBlock Canvas.Left="10" Canvas.Bottom="10" Height="89" Name="textBlock1" Text="X: &#10;Y: &#10;Z: " Width="189" Foreground="White" FontSize="22" />
            <Label Canvas.Left="0" Canvas.Top="0" Content="Hand Drawing v0.1" Height="43" Name="label1" Width="199" Foreground="White" FontSize="22" />
            <Border BorderBrush="DarkGray" BorderThickness="1" Canvas.Right="10" Canvas.Top="10" Height="240" Name="border1" Width="320" />    
            <Canvas Canvas.Right="10" Canvas.Top="10" Height="240" Name="preview" Width="320" />
            <Slider ValueChanged="slider1_ValueChanged" Foreground="Black" Canvas.Right="5" Canvas.Bottom="5" Height="22" Name="slider1" Width="100" Maximum="27" Minimum="-27" SmallChange="1" />
        </Canvas>
    </Grid>
</Window>
